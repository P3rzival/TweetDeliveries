<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<link rel="icon" type="image/png" href="assets/img/favicon.ico">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

	<title>Spicy Slice - Admin Dashboard</title>

	<meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />



    <!-- Bootstrap core CSS     -->
    <link href="assets/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Animation library for notifications   -->
    <link href="assets/css/animate.min.css" rel="stylesheet"/>

    <!--  Light Bootstrap Table core CSS    -->
    <link href="assets/css/light-bootstrap-dashboard.css" rel="stylesheet"/>

		<link href="assets/css/extras.css" rel="stylesheet" />

    <!--     Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>
    <link href="assets/css/pe-icon-7-stroke.css" rel="stylesheet" />

</head>
<body>

<div class="wrapper">
    <div class="sidebar" data-color="purple" data-image="assets/img/sidebar-5.jpg">

    <!--

        Tip 1: you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple"
        Tip 2: you can also add an image using data-image tag

    -->

    	<div class="sidebar-wrapper">
            <div class="logo">
                <a href="#" class="simple-text">
                    Spicy Slice
                </a>
            </div>

            <ul class="nav" >
                <li class="active">
                    <a href="/order">
                        <i class="pe-7s-cart"></i>
                        <p>Orders</p>
                    </a>
                </li>
                <li>
                    <a href="/confirmed">
                        <nav class="pull-left"><font size="5px">âœ”</font></nav><p>Confirmed orders</p>
                    </a> 
                </li>
				<li>
                    <a href="/question">
                        <i class="pe-7s-help1"></i>
                        <p>Questions</p>
                    </a>
                </li>
                <nav class="pull-left">
                    <ul>
                        <li>
                            <a href="/../">
                                Log Out
                            </a>
                        </li>

                    </ul>
                </nav>
            </ul>
    	</div>
    </div>

    <div class="main-panel">
        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header" style="padding-top: 17px;">
                    <button type="button" class="navbar-toggle" data-toggle="collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    <form action="/order" method="get">
                        <select name ="pizzeria_address" id="pizzeria_location">
                        <option hidden><%=h session[:current_city]%></option>
                        <option value="Sheffield">Sheffield</option>
                        <option value="London">London</option>
                        </select>
                        <input type="submit" value="Check Pizzeria Orders"/>
                    </form> 

                </div>
                <div class="collapse navbar-collapse">
                    

                    <ul class="nav navbar-nav navbar-right">
                        <li style="padding-top: 17px;">
                               Find tweets from:
                        </li>
												<li style="padding-top: 15px; padding-left: 15px;">
													<form method="post" action="search">
													 <input type="text" name="username" value="<%=h params[:username] %>"/>
													 <input type="submit" name="submit" value="Find" />
												 </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>


        <div class="content">
            <div class="container-fluid">
                <div class="row">

									<div class="card">
										<div class="header">
                                <h4 class="title">Delivering Orders</h4>
                                <p class="category">Here we have the tweets which are <b>orders</b> and <b>deliveries</b></p>
                            </div>
										<div class="content table-responsive table-full-width">

									<% unless @delivery_tweets.nil? %>
											<% if @delivery_tweets.length == 0 %>
													<p>No search result found!</p>
											<% else %>
													<table class="table table-hover table-striped">
														<thead>
														  <tr>
																<th>Name</th>
														    <th>Address</th>
														    <th>Tweet</th>
				                       	<th>Confirm</th>
						                  	<th>Reply</th>
														  </tr>
														</thead>
															<% @delivery_tweets.each do |i| 
                                                               @handle = @db.get_first_value('select twitter_handle from tweets where id = ?',[i])%>
																	<tr>
																			<td>
																					 <a href="https://twitter.com/<%=h @handle %>">
																							@<%= @handle %>
																					 </a>
																			</td>
																			<td>
                                                                                   <% @address_line1 = @db.get_first_value('select address_line1 from customers where twitter_handle = ?',[@handle]) 
                                                                                      @address_line2 = @db.get_first_value('select address_line2 from customers where twitter_handle = ?',[@handle]) 
                                                                                      @postcode = @db.get_first_value('select postcode from customers where twitter_handle = ?',[@handle]) 
                                                                                       @address = "#{@address_line1}, #{@address_line2}, #{@postcode}"
                                                                                    %>
																					<%=h @address %> 
                                                                            
																			</td>
																			<td>
																					<%=h @db.get_first_value('select tweet_content from tweets where id = ?',[i]) %>
																			</td>
                                                                            
																			<td>
																				<form method="post" action="confirmation">
																					<input type="hidden" name="user" value="<%=h @handle %>"/>
																					<input type="hidden" name="id" value="<%=h @db.get_first_value('select twitter_id from tweets where id = ?',[i]) %>"/>
								
                                                                                    <input type="submit" name="submit" value="Confirm" />
																				</form>
																			</td>
																			<td>
																				<form method="post" action="replied">
																				  <input type="text" name="reply" value="<%=h params[:reply] %>"/>
																					<input type="hidden" name="user" value="<%=h @handle %>"/>
																					<input type="hidden" name="id" value="<%=h @db.get_first_value('select twitter_id from tweets where id = ?',[i]) %>"/>
																				  <input type="submit" name="submit" value="Send" />
																				</form>
																			</td>
																	</tr>
															<% end %>
													</table>
											<% end %>
									 <% end %>
								 </div>
							</div>

						<div class="card">
							<div class="header">
													<h4 class="title">Collecting Orders</h4>
													<p class="category">Here we have the tweets which are <b>orders</b> and <b>collecting</b></p>
											</div>
							<div class="content table-responsive table-full-width">

						<% unless @collect_tweets.nil? %>
								<% if @collect_tweets.length == 0 %>
										<p>No search result found!</p>
								<% else %>
										<table class="table table-hover table-striped">
											<thead>
												<tr>
													<th>Name</th>
													<th>Address</th>
													<th>Tweet</th>
													<th>Confirm</th>
													<th>Reply</th>
												</tr>
											</thead>
												<% @collect_tweets.each do |i| 
                                                @handle = @db.get_first_value('select twitter_handle from tweets where id = ?',[i])%>
														<tr>
																<td>
																		 <a href="https://twitter.com/<%=h @handle %>">
																							@<%= @handle %>
																					 </a>
																</td>
																<td>
																		SHOP
																</td>
																<td>
																		<%=h @db.get_first_value('select tweet_content from tweets where id = ?',[i]) %>
																</td>
																<td>
																	<form method="post" action="confirmation">
																		<input type="hidden" name="user" value="<%=h @handle %>"/>
																		<input type="hidden" name="id" value="<%=h @db.get_first_value('select twitter_id from tweets where id = ?',[i]) %>"/>
																		<input type="submit" name="submit" value="Confirm" />
																	</form>
																</td>
																<td>
																	<form method="post" action="replied">
																		<input type="text" name="reply" value="<%=h params[:reply] %>"/>
																		<input type="hidden" name="user" value="<%=h @handle %>"/>
																		<input type="hidden" name="id" value="<%=h @db.get_first_value('select twitter_id from tweets where id = ?',[i]) %>"/>
																		<input type="submit" name="submit" value="Send" />
																	</form>
																</td>
																</tr>
															<% end %>
														</table>
													<% end %>
									 			<% end %>
								 		</div>
									</div>
								</div>
							</div>
            </div>
        </div>
        
       
							

        <footer class="footer">
            <div class="container-fluid">
                
                <p class="copyright pull-right">
                    &copy; <script>document.write(new Date().getFullYear())</script> <a href="#">Team13</a>, creating awesome pages since 2016
                </p>
            </div>
        </footer>

    </div>
</div>


</body>

